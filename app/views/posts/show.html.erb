<br><%= @post.title %>(<%=@post.url%>)<br>

<h6>written by <%=@post.user.username%> <%= time_ago_in_words(@post.created_at) %></h6>
<ol>
<% @post.comments.each do |comment| %>
  <li>
    <%= comment.body %>
      <h6>written by <%=comment.user.username%> <%= time_ago_in_words(comment.created_at) %></h6>
  </li>
<% end %>
</ol>
